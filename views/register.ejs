
<%- include("./partials/headerindex.ejs") %>

<!-- signup form -->
<div class="rectapw">
    <div>
        <form action="/auth/signup" method="POST">
            <div class="shadow-dreamy rect-signup" id="rect-signup">
                <div style="width: 100px;height: 100px; display: inline-block; border-radius: 100%;">
                    <svg style="color: white;" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                </div>
                <h1>Registrieren</h1>
                    <div class="form-section">
                        <input name="mailsignup" type="text" id="mail-signup" placeholder="" required/>
                        <label for="mail-signup" class="form-label"><span class="label-content">i-Serv Mail</span></label>
                    </div>
                    <div class="form-section" style="margin-top: 30px;">
                        <input name="passwordsignup" type="password" id="password-signup" placeholder="" required/>
                      <label for="password-signup" class="form-label"><span class="label-content">Passwort</span></label>
                    </div>
                    <div class="form-section" style="margin-top: 30px;">
                        <input name="passwordrptsignup" type="password" id="password-rpt-signup" placeholder="" required/>
                        <label for="password-rpt-signup" class="form-label"><span class="label-content">Passwort wiederholen</span></label>
                    </div>
                    <% if (error == 'existingmail') { %>
                        <span style="color: red; font-family: manropethin; top: -20px; position: relative;">Benutzer existiert bereits</span>
                        <input type="submit" id="signup-btn" value="Registrieren" style="margin-top: 0;">
                    <% } else if (error == 'invalidmail') { %>
                        <span style="color: red; font-family: manropethin; top: -20px; position: relative;">E-Mail ungültig</span>
                        <input type="submit" id="signup-btn" value="Registrieren" style="margin-top: 0;">
                    <% } else if (error == 'pwlength') { %>
                        <span style="color: red; font-family: manropethin; top: -20px; position: relative;">Passwort zu kurz</span>
                        <input type="submit" id="signup-btn" value="Registrieren" style="margin-top: 0;">
                    <% } else if (error == 'pwmatch') { %>
                        <span style="color: red; font-family: manropethin; top: -20px; position: relative;">Passwort stimmt nicht überein</span>
                        <input type="submit" id="signup-btn" value="Registrieren" style="margin-top: 0;">
                    <% } else { %>
                        <input type="submit" id="signup-btn" value="Registrieren">
                    <% } %>
            </div>
        </form>
        
        <!-- existing account button section -->
        <div class="accexisting" id="accexisting">
            <a style="text-decoration:none" href="/">Account vorhanden ? Anmelden</a>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
