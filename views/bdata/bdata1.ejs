<th>
    <div class="cover">
        <div class="coverdiv">
            <% if(book.available == book.count) { %>
            <img class="coverimg" src="/resources/bookimg/<%= book.cover %>.png" alt="book cover">
            <% } else { %>
            <img class="coverimg unavailable" src="/resources/bookimg/<%= book.cover %>.png" alt="book cover">
            <% } %>
        </div>
    </div>
</th>
<th class="details" valign="top">
    <h1 class="bookdetailsheader"><%= book.name %></h1>
    <form>
        <div class="bookdisplay">
            <input class="bookname" value="Autor:" readonly autocomplete="off"/>
            <input class="form-control bookdata" value="<%= book.author %>" readonly autocomplete="off"/>
        </div>
        <div class="bookdisplay">
            <input class="bookname" value="Genre:" readonly autocomplete="off"/>
            <input class="form-control bookdata" value="<%= book.genre %>" readonly autocomplete="off"/>
        </div>
        <div class="bookdisplay">
            <input class="bookname" value="Verlag:" readonly autocomplete="off"/>
            <input class="form-control bookdata" value="<%= book.publisher %>" readonly autocomplete="off"/>
        </div>
        <div class="bookdisplay">
            <input class="bookname" value="ISBN:" readonly autocomplete="off"/>
